<view class="container">
  <view class="page-body">
    <view class="page-section">
      <view class="dnbl-cells__title">出发地点</view>
      <view class="dnbl-cells dnbl-cells_after-title">
        <view class="dnbl-cell dnbl-cell_input">
          <view class="dnbl-cell__hd">
            <view class="dnbl-label">当前选择</view>
          </view>
          <view class="dnbl-cell__bd">
            <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
              <view class="dnbl-input">{{array[index]}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="dnbl-cells__title">活动地点</view>
      <view class="dnbl-cells dnbl-cells_after-title">
        <view class="dnbl-cell dnbl-cell_input">
          <view class="dnbl-cell__hd">
            <view class="dnbl-label">当前选择</view>
          </view>
          <view class="dnbl-cell__bd">
            <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
              <view class="dnbl-input">{{array[index]}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="dnbl-cells__title">活动时间</view>
      <view class="dnbl-cells dnbl-cells_after-title">
        <view class="dnbl-cell dnbl-cell_input">
          <view class="dnbl-cell__hd">
            <view class="dnbl-label">当前选择</view>
          </view>
          <view class="dnbl-cell__bd">
            <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
              <view class="dnbl-input">{{time}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="dnbl-cells__title">实到时间</view>
      <view class="dnbl-cells dnbl-cells_after-title">
        <view class="dnbl-cell dnbl-cell_input">
          <view class="dnbl-cell__hd">
            <view class="dnbl-label">当前选择</view>
          </view>
          <view class="dnbl-cell__bd">
            <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
              <view class="dnbl-input">{{time}}</view>
            </picker>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
