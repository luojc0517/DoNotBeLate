<view class="container">
  <view class="page-body">
    <view class="page-section">
      <view class="dnbl-cells__title">出发地点</view>
      <view class="dnbl-cells dnbl-cells_after-title">
        <view class="dnbl-cell dnbl-cell_input">
          <view class="dnbl-cell__hd">
            <view class="dnbl-label">当前选择</view>
          </view>
          <view class="dnbl-cell__bd">
            <picker bindchange="bindStartLocIndexChange" value="{{index}}" range="{{array}}">
              <view class="dnbl-input">{{array[startLocIndex]}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="dnbl-cells__title">活动地点</view>
      <view class="dnbl-cells dnbl-cells_after-title">
        <view class="dnbl-cell dnbl-cell_input">
          <view class="dnbl-cell__hd">
            <view class="dnbl-label">当前选择</view>
          </view>
          <view class="dnbl-cell__bd">
            <picker bindchange="bindEndLocIndexChange" value="{{index}}" range="{{array}}">
              <view class="dnbl-input">{{array[endLocIndex]}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="dnbl-cells__title">活动时间</view>
      <view class="dnbl-cells dnbl-cells_after-title">
        <view class="dnbl-cell dnbl-cell_input">
          <view class="dnbl-cell__hd">
            <view class="dnbl-label">当前选择</view>
          </view>
          <view class="dnbl-cell__bd">
            <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindStartTimeChange">
              <view class="dnbl-input">{{startTime}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="dnbl-cells__title">实到时间</view>
      <view class="dnbl-cells dnbl-cells_after-title">
        <view class="dnbl-cell dnbl-cell_input">
          <view class="dnbl-cell__hd">
            <view class="dnbl-label">当前选择</view>
          </view>
          <view class="dnbl-cell__bd">
            <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindEndTimeChange">
              <view class="dnbl-input">{{endTime}}</view>
            </picker>
          </view>
        </view>
      </view>
    </view>

    <view class="btn-area" id="buttonContainer">
      <button type="primary" bindtap="doCalc">开始计算</button>
    </view>
  </view>
</view>
